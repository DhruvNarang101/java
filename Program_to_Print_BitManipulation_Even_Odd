public class BitManEvenOdd {
    public static void OddEven (int n){
        int bitMask = 1;
        if((n & bitMask ) == 0){
            //Even Number 
            System.out.println("Even Number");
        }
        else {
            System.out.println("Odd Number");
        }
    }
    public static void main (String args[]){
        int n = 5;
        OddEven(5);
        OddEven(8);   
     }
}
