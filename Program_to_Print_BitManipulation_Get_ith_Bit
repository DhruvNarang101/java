public class getithbit {
    public static int getbit (int n , int i){
        int bitMask = 1<<i;
        if( (n & bitMask )== 0){
            return 0;
        }
            return 1;
    }
    public static void main (String args[]){
        int n = 10;
        int i = 3;
        System.out.println(getbit(n,i));
    }
}
