public class InvertedHalfPyr{
    public static void Pyramid(int n){
        //outerloop
        for(int i=1;i<=n;i++){
            //Space
            for(int j=1;j<=4-i;j++){
                System.out.print(" ");
            }
            for(int j=1;j<=i;j++){
                System.out.print("*");
            }
            System.out.println();
        }
    }
    public static void main (String args[]){
        Pyramid(4);
    }
}
